#!/usr/bin/env bash
# This script configures a new Ubuntu server
# Installs and configures Nginx web server
# Customizes the 404 page
apt-get -y update
apt-get -y install nginx
ufw allow 'Nginx HTTP'
echo 'Hello World!' > /var/www/html/index.nginx-debian.html 
service nginx restart
LINE1=" server_name http://nyandi.tech;"
LINE2=" rewrite ^/redirect_me/$ http://nyandi.tech permanent;"
sed -i "s,^\sserver_name.*;,$LINE1\n$LINE2," /etc/nginx/sites-available/default
LINE1=" error_page 404 /custom_404.html;"
LINE2=" location = /custom_404.html {"
LINE3="		root /usr/share/nginx/html;"
LINE4="		internal;"
sed -i "s,^\slocation.*{,$LINE1\n$LINE2\n$LINE3\n$LINE4," /etc/nginx/sites-available/default
service nginx restart
